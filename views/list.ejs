<%- include("header") -%>

      <div class="box" id="heading">
      <h1> <%= name %> </h1>
      </div>
      <div class="box">
            <%for(var i = 0; i<listItems.length; i++){%>
                  <div class="item">
                        <input type="checkbox">
                        <p><%= listItems[i] %></p>
                  </div>
                  
            <%}%>      
      <form class="item" action="/" method="post">
            <input type="text" name="item_name" placeholder="New Item" autocomplete="off">
            <button type="submit" name="button" value=<%=name%>>+</button>
      </form>
      </div>
      
<%- include("footer") -%>
